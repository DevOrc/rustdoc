{
    "version": "0.1.0",
    "command": "cargo",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "cargo build",
            "args": [
                "build"
            ],
            "isBuildCommand": true
        },
        {
            "taskName": "run",
            "args": [
                "run",
                "--",
                "--manifest-path=example",
                "build"
            ]
        },
        {
            "taskName": "cargo test",
            "args": [
                "test"
            ],
            "isTestCommand": true
        }
    ]
}
